<% content_for :title, "Edit User" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0">
    <i class="fas fa-user-edit me-2"></i>
    Edit User
  </h1>
  <%= link_to user_path(@user), class: "btn btn-secondary" do %>
    <i class="fas fa-arrow-left me-1"></i>
    Back to Profile
  <% end %>
</div>

<div class="row">
  <!-- Edit Form -->
  <div class="col-lg-8">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
          <i class="fas fa-edit me-2"></i>
          User Information
        </h5>
      </div>
      <div class="card-body">
        <%= form_with model: @user, local: true, class: "needs-validation", novalidate: true do |form| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <h6 class="alert-heading">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Please fix the following errors:
              </h6>
              <ul class="mb-0">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Basic Information -->
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :name, class: "form-label" do %>
                <i class="fas fa-user me-1"></i>
                Full Name
              <% end %>
              <%= form.text_field :name, class: "form-control", placeholder: "Enter full name" %>
              <div class="form-text">Optional: Display name for the user</div>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :email, class: "form-label" do %>
                <i class="fas fa-envelope me-1"></i>
                Email Address <span class="text-danger">*</span>
              <% end %>
              <%= form.email_field :email, class: "form-control", required: true, placeholder: "user@gmail.com" %>
              <div class="form-text">Must be a valid @gmail.com address</div>
              <div class="invalid-feedback">Please provide a valid email address.</div>
            </div>
          </div>

          <!-- Admin Only Fields -->
          <% if current_user.admin? %>
            <hr class="my-4">
            <h6 class="text-muted mb-3">
              <i class="fas fa-crown me-2"></i>
              Administrator Controls
            </h6>
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :role, class: "form-label" do %>
                  <i class="fas fa-user-tag me-1"></i>
                  User Role <span class="text-danger">*</span>
                <% end %>
                <%= form.select :role, 
                    options_for_select([
                      ['Buyer', 'buyer'],
                      ['Seller', 'seller'], 
                      ['Administrator', 'admin']
                    ], @user.role), 
                    {}, 
                    { class: "form-select", required: true } %>
                <div class="form-text">
                  <small>
                    <strong>Buyer:</strong> Can browse and purchase products<br>
                    <strong>Seller:</strong> Can list and sell products<br>
                    <strong>Admin:</strong> Full system access
                  </small>
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :status, class: "form-label" do %>
                  <i class="fas fa-toggle-on me-1"></i>
                  Account Status <span class="text-danger">*</span>
                <% end %>
                <%= form.select :status, 
                    options_for_select([
                      ['Active', 'active'],
                      ['Blocked', 'blocked'],
                      ['Pending Approval', 'pending_approval'],
                      ['Inactive', 'inactive']
                    ], @user.status), 
                    {}, 
                    { class: "form-select", required: true } %>
                <div class="form-text">
                  <small>
                    <strong>Active:</strong> Full access to platform<br>
                    <strong>Blocked:</strong> Access denied<br>
                    <strong>Pending:</strong> Awaiting approval<br>
                    <strong>Inactive:</strong> Temporarily disabled
                  </small>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Action Buttons -->
          <div class="d-flex gap-2 justify-content-end mt-4">
            <%= link_to user_path(@user), class: "btn btn-outline-secondary" do %>
              <i class="fas fa-times me-1"></i>
              Cancel
            <% end %>
            
            <%= form.submit "Update User", class: "btn btn-primary" do %>
              <i class="fas fa-save me-1"></i>
              Update User
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- User Preview & Info -->
  <div class="col-lg-4">
    <!-- Current User Info -->
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-info text-white">
        <h6 class="mb-0">
          <i class="fas fa-info-circle me-2"></i>
          Current Information
        </h6>
      </div>
      <div class="card-body">
        <div class="text-center mb-3">
          <div class="avatar-lg mx-auto mb-2">
            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center text-white" style="width: 80px; height: 80px; font-size: 2rem;">
              <%= @user.name&.first&.upcase || @user.email.first.upcase %>
            </div>
          </div>
          <h6 class="mb-1">
            <%= @user.name.present? ? @user.name : 'No Name Set' %>
          </h6>
          <p class="text-muted small mb-2">
            <%= @user.email %>
          </p>
        </div>

        <div class="row text-center">
          <div class="col-6">
            <div class="border-end">
              <div class="mb-1">
                <% case @user.role %>
                <% when 'admin' %>
                  <span class="badge bg-danger">
                    <i class="fas fa-crown me-1"></i>Admin
                  </span>
                <% when 'seller' %>
                  <span class="badge bg-warning">
                    <i class="fas fa-store me-1"></i>Seller
                  </span>
                <% when 'buyer' %>
                  <span class="badge bg-info">
                    <i class="fas fa-shopping-cart me-1"></i>Buyer
                  </span>
                <% end %>
              </div>
              <small class="text-muted">Role</small>
            </div>
          </div>
          <div class="col-6">
            <div class="mb-1">
              <% case @user.status %>
              <% when 'active' %>
                <span class="badge bg-success">
                  <i class="fas fa-check-circle me-1"></i>Active
                </span>
              <% when 'blocked' %>
                <span class="badge bg-danger">
                  <i class="fas fa-ban me-1"></i>Blocked
                </span>
              <% when 'pending_approval' %>
                <span class="badge bg-warning">
                  <i class="fas fa-clock me-1"></i>Pending
                </span>
              <% when 'inactive' %>
                <span class="badge bg-secondary">
                  <i class="fas fa-pause me-1"></i>Inactive
                </span>
              <% end %>
            </div>
            <small class="text-muted">Status</small>
          </div>
        </div>

        <hr>

        <div class="small text-muted">
          <div class="d-flex justify-content-between mb-1">
            <span>Member Since:</span>
            <strong><%= @user.created_at.strftime("%m/%d/%Y") %></strong>
          </div>
          <div class="d-flex justify-content-between">
            <span>Last Updated:</span>
            <strong><%= @user.updated_at.strftime("%m/%d/%Y") %></strong>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-dark text-white">
        <h6 class="mb-0">
          <i class="fas fa-bolt me-2"></i>
          Quick Actions
        </h6>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to user_path(@user), class: "btn btn-outline-primary btn-sm" do %>
            <i class="fas fa-eye me-1"></i>
            View Profile
          <% end %>

          <% if current_user.admin? %>
            <% if @user.status == 'pending_approval' %>
              <%= link_to approve_user_path(@user), method: :patch, 
                  class: "btn btn-outline-success btn-sm", 
                  data: { turbo_method: :patch, turbo_confirm: "Approve this user?" } do %>
                <i class="fas fa-check me-1"></i>
                Approve User
              <% end %>
            <% end %>

            <% if @user.status != 'blocked' && @user != current_user %>
              <%= link_to block_user_path(@user), 
                  class: "btn btn-outline-danger btn-sm", 
                  data: { turbo_method: :patch, turbo_confirm: "Block this user?" } do %>
                <i class="fas fa-ban me-1"></i>
                Block User
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Help Card -->
    <div class="card shadow-sm border-info">
      <div class="card-header bg-light">
        <h6 class="mb-0 text-info">
          <i class="fas fa-question-circle me-2"></i>
          Need Help?
        </h6>
      </div>
      <div class="card-body">
        <p class="card-text small">
          <strong>Email Requirements:</strong> Only @gmail.com addresses are allowed.
        </p>
        <p class="card-text small">
          <strong>Password:</strong> Leave blank to keep the current password unchanged.
        </p>
        <% if current_user.admin? %>
          <p class="card-text small">
            <strong>Admin Note:</strong> Changing user roles and status will take effect immediately.
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .avatar-lg {
    flex-shrink: 0;
  }
  
  .border-end {
    border-right: 1px solid #dee2e6 !important;
  }
  
  .needs-validation .form-control:invalid {
    border-color: #dc3545;
  }
  
  .needs-validation .form-control:valid {
    border-color: #198754;
  }
  
  .card {
    border-radius: 10px;
  }
  
  .form-control:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
  }
  
  .btn {
    border-radius: 6px;
  }
  
  @media (max-width: 768px) {
    .border-end {
      border-right: none !important;
      border-bottom: 1px solid #dee2e6 !important;
      padding-bottom: 0.5rem;
      margin-bottom: 0.5rem;
    }
  }
</style>

<script>
  // Form validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();

  // Password confirmation validation
  document.addEventListener('DOMContentLoaded', function() {
    const password = document.getElementById('user_password');
    const confirmPassword = document.getElementById('user_password_confirmation');
    
    function validatePassword() {
      if (password.value !== confirmPassword.value) {
        confirmPassword.setCustomValidity("Passwords don't match");
      } else {
        confirmPassword.setCustomValidity('');
      }
    }
    
    if (password && confirmPassword) {
      password.addEventListener('change', validatePassword);
      confirmPassword.addEventListener('keyup', validatePassword);
    }
  });
</script>