<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Sign In</h3>
      </div>
      <div class="card-body">
        <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
          <% if resource.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% resource.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :email, class: 'form-label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: 'form-label' %>
            <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', required: true %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-3 form-check">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label :remember_me, class: 'form-check-label' %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.submit 'Sign in', class: 'btn btn-primary' %>
          </div>
        <% end %>

        <div class="mt-3 text-center">
          <%= link_to 'Forgot your password?', new_password_path(resource_name), class: 'text-muted' %>
          <br>
          <%= link_to 'Sign up', new_user_registration_path, class: 'text-muted' %>
        </div>
      </div>
    </div>
  </div>
</div>