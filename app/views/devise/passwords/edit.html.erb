<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Reset Password</h3>
      </div>
      <div class="card-body">
        <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <% if resource.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% resource.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= f.hidden_field :reset_password_token %>

          <div class="mb-3">
            <%= f.label :password, "New password", class: 'form-label' %>
            <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', required: true %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted">
                <%= @minimum_password_length %> characters minimum
              </small>
            <% end %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirm new password", class: 'form-label' %>
            <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control', required: true %>
          </div>

          <div class="d-grid">
            <%= f.submit 'Change my password', class: 'btn btn-primary' %>
          </div>
        <% end %>

        <div class="mt-3 text-center">
          <%= link_to 'Sign in', new_session_path(resource_name), class: 'text-muted' %>
          <br>
          <%= link_to 'Sign up', new_registration_path(resource_name), class: 'text-muted' %>
        </div>
      </div>
    </div>
  </div>
</div>