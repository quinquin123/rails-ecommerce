<h2>Forgot your password?</h2>

<%= form_with(model: resource, as: resource_name, url: password_path(resource_name), local: true) do |f| %> <% if resource.errors.any? %>
<% resource.errors.full_messages.each do |msg| %>
<%= msg %>
<% end %>
<% end %>
<%= f.label :email, class: 'form-label' %> <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', required: true %>
<%= f.submit 'Send reset instructions', class: 'btn btn-primary' %>
<% end %>
<%= link_to 'Sign in', new_session_path(resource_name), class: 'text-muted' %>
<%= link_to 'Sign up', new_registration_path(resource_name), class: 'text-muted' %>
