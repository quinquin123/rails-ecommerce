<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Forgot Password</h3>
      </div>
      <div class="card-body">
        <%= form_with(model: resource || resource_class.new, as: resource_name, url: password_path(resource_name), local: true) do |f| %>
          <% if resource && resource.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% resource.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :email, class: 'form-label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', required: true %>
          </div>

          <div class="d-grid">
            <%= f.submit 'Send reset instructions', class: 'btn btn-primary' %>
          </div>
        <% end %>

        <div class="mt-3 text-center">
          <%= link_to 'Sign in', new_session_path(resource_name), class: 'text-muted' %>
          <br>
          <%= link_to 'Sign up', new_registration_path(resource_name), class: 'text-muted' %>
        </div>
      </div>
    </div>
  </div>
</div>