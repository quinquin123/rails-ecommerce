<h2>Sign up</h2>

<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %> <% if resource.errors.any? %>
<% resource.errors.full_messages.each do |msg| %>
<%= msg %>
<% end %>
<% end %>
<%= f.label :email, class: 'form-label' %> <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', required: true %>
<%= f.label :password, class: 'form-label' %> <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', required: true %> <%= "(#{@minimum_password_length} characters minimum)" if @minimum_password_length %>
<%= f.label :password_confirmation, class: 'form-label' %> <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control', required: true %>
<%= f.label :role, class: 'form-label' %> <%= f.select :role, User.roles.keys, { prompt: 'Select role' }, class: 'form-select', required: true %>
<%= f.submit 'Sign up', class: 'btn btn-primary' %>
<% end %>
<%= link_to 'Sign in', new_session_path(resource_name), class: 'text-muted' %>
