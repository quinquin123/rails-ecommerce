  <div class="products-table-container">
    <table class="products-table">
      <thead>
        <tr>
          <th>Preview</th>
          <th>Title</th>
          <th>Seller</th>
          <th>Category</th>
          <th>Price</th>
          <th>Status</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="productsTable">
        <% @products.each do |product| %>
          <tr class="product-row" data-product-id="<%= product.id %>" data-category="<%= product.category&.id || '' %>" data-status="<%= product.status || 'moderated' %>">
            <td class="preview">
              <% if product.video_thumbnail.attached? %>
                <%= image_tag product.video_thumbnail.variant(resize_to_limit: [100, 100]), class: 'preview-image' %>
              <% elsif product.video.attached? %>
                <video class="preview-video" muted>
                  <source src="<%= rails_blob_path(product.video) %>" type="<%= product.video.content_type %>">
                </video>
              <% elsif product.preview_image.attached? %>
                <%= image_tag product.preview_image.variant(resize_to_limit: [100, 100]), class: 'preview-image', alt: product.title %>
              <% else %>
                <div class="placeholder-image">
                  <i class="fas fa-image"></i>
                </div>
              <% end %>
            </td>
            <td><%= truncate(product.title, length: 50) %></td>
            <td><%= product.seller&.name || 'Unknown' %></td>
            <td><%= product.category&.name || 'Uncategorized' %></td>
            <td>$<%= product.price %></td>
            <td>
              <span class="status-badge status-<%= product.status %>">
                <%= product.status.capitalize %>
              </span>
            </td>
            <td><%= product.created_at.strftime('%Y-%m-%d %H:%M') %></td>
            <td>
              <div class="actions">
                <%= link_to product_path(product), class: 'btn btn-primary btn-sm' do %>
                  <i class="fas fa-eye me-1"></i>View
                <% end %>
