                  <%= link_to edit_product_path(product), class: 'btn btn-secondary btn-sm' do %>
                    <i class="fas fa-edit me-1"></i>Edit
                  <% end %>
                  <% if product.status == 'moderated' %>
                    <%= button_to approve_product_path(product), method: :patch, class: 'btn btn-success btn-sm' do %>
                      <i class="fas fa-check me-1"></i>Approve
                    <% end %>
                    <%= button_to reject_product_path(product), method: :patch, class: 'btn btn-warning btn-sm' do %>
                      <i class="fas fa-times me-1"></i>Reject
                    <% end %>
                  <% elsif product.status == 'active' %>
                    <%= button_to delete_product_path(product), method: :patch, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to mark this product as deleted?' } do %>
                      <i class="fas fa-trash me-1"></i>Delete
                    <% end %>
                  <% elsif product.status == 'deleted' %>
                    <%= button_to restore_product_path(product), method: :patch, class: 'btn btn-info btn-sm' do %>
                      <i class="fas fa-undo me-1"></i>Restore
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
