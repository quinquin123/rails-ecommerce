<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const categorySelect = document.getElementById('categorySelect');
    const statusSelect = document.getElementById('statusSelect');
    const productsTable = document.getElementById('productsTable');
    const productRows = document.querySelectorAll('.product-row');

    function filterProducts() {
      const searchTerm = searchInput.value.toLowerCase();
      const selectedCategory = categorySelect.value.toLowerCase();
      const selectedStatus = statusSelect.value.toLowerCase();

      productRows.forEach(row => {
        const title = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
        const seller = row.querySelector('td:nth-child(3)').textContent.toLowerCase();
        const description = row.querySelector('td:nth-child(4)')?.textContent.toLowerCase() || '';
        const category = row.getAttribute('data-category');
        const status = row.getAttribute('data-status').toLowerCase();

        const matchesSearch = !searchTerm || 
          title.includes(searchTerm) || 
          seller.includes(searchTerm) || 
          description.includes(searchTerm);
        const matchesCategory = !selectedCategory || category === selectedCategory;
        const matchesStatus = !selectedStatus || status === selectedStatus;

        // Hide deleted products unless 'deleted' is selected
        const showRow = matchesSearch && matchesCategory && (selectedStatus === 'deleted' ? status === 'deleted' : status !== 'deleted' && matchesStatus);

        if (showRow) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });

      const visibleRows = Array.from(productRows).filter(row => row.style.display !== 'none');
      updateEmptyState(visibleRows.length === 0);
    }

    function updateEmptyState(show) {
      let emptyState = document.querySelector('.empty-state-filtered');
      if (show && !emptyState) {
        emptyState = document.createElement('div');
        emptyState.className = 'empty-state empty-state-filtered';
        emptyState.innerHTML = `
          <div class="empty-icon">
            <i class="fas fa-search"></i>
          </div>
          <h3>No products found</h3>
          <p>Try adjusting your search or filter criteria.</p>
        `;
        productsTable.parentNode.appendChild(emptyState);
      } else if (!show && emptyState) {
        emptyState.remove();
      }
    }

    searchInput.addEventListener('input', filterProducts);
    categorySelect.addEventListener('change', filterProducts);
    statusSelect.addEventListener('change', filterProducts);
    filterProducts(); // Initial filter to hide deleted products

    // Flash messages for admin actions
    document.querySelectorAll('.btn-success, .btn-warning, .btn-danger, .btn-info').forEach(button => {
      button.addEventListener('ajax:success', (event) => {
        const [data, status, xhr] = event.detail;
        showFlashNotice('Action completed successfully!');
        setTimeout(() => location.reload(), 1000); // Reload to reflect status changes
      });
      button.addEventListener('ajax:error', (event) => {
        const [data, status, xhr] = event.detail;
        showFlashAlert(data.error || 'Action failed.');
      });
    });

    function showFlashNotice(message) {
      const flash = document.createElement('div');
      flash.className = 'alert alert-success flash-message';
      flash.innerHTML = message;
      document.body.appendChild(flash);
      setTimeout(() => flash.remove(), 3000);
    }

    function showFlashAlert(message) {
      const flash = document.createElement('div');
      flash.className = 'alert alert-danger flash-message';
      flash.innerHTML = message;
      document.body.appendChild(flash);
      setTimeout(() => flash.remove(), 3000);
    }
  });
</script>
