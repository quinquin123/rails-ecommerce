<div class="row justify-content-center">
  <div class="col-lg-8 col-md-10">
    <% if params[:confirm] == 'true' %>
      <!-- Confirmation Dialog -->
      <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
          <h3 class="card-title mb-0">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Confirm Product Deletion
          </h3>
        </div>
        <div class="card-body">
          <div class="alert alert-warning" role="alert">
            <i class="fas fa-warning me-2"></i>
            <strong>Warning!</strong> This action cannot be undone. Are you sure you want to delete this product?
          </div>

          <% if @product %>
            <div class="row mb-4">
              <div class="col-md-4">
                <% if @product.image.attached? %>
                  <%= image_tag @product.image, class: "img-fluid rounded", style: "max-height: 200px; width: 100%; object-fit: cover;" %>
                <% else %>
                  <div class="bg-light border rounded d-flex align-items-center justify-content-center" style="height: 200px;">
                    <i class="fas fa-image fa-3x text-muted"></i>
                  </div>
                <% end %>
              </div>
              <div class="col-md-8">
                <h4 class="text-danger"><%= @product.name %></h4>
                <p><span class="badge bg-secondary"><%= @product.category&.humanize %></span></p>
                <h5 class="text-primary">$<%= @product.price %></h5>
                <p class="text-muted"><%= truncate(@product.description, length: 150) %></p>
                <div class="product-details">
                  <small class="text-muted">
                    <% if @product.brand.present? %>
                      <strong>Brand:</strong> <%= @product.brand %> |
                    <% end %>
                    <% if @product.condition.present? %>
                      <strong>Condition:</strong> <%= @product.condition.humanize %> |
                    <% end %>
                    <strong>Available:</strong> <%= @product.quantity %> items |
                    <strong>Created:</strong> <%= @product.created_at.strftime("%B %d, %Y") %>
                  </small>
                </div>
              </div>
            </div>

            <!-- Impact Warning -->
            <div class="row mb-4">
              <div class="col-12">
                <div class="card bg-light">
                  <div class="card-body">
                    <h6 class="card-title text-warning">
                      <i class="fas fa-info-circle me-2"></i>
                      Deletion Impact
                    </h6>
                    <ul class="mb-0 text-muted">
                      <li>Product will be permanently removed from your store</li>
                      <li>All product images and data will be deleted</li>
                      <li>Customers will no longer be able to view or purchase this product</li>
                      <li>Any pending orders containing this product may be affected</li>
                      <li>Product analytics and history will be lost</li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex gap-2">
              <%= link_to products_path, class: "btn btn-secondary" do %>
                <i class="fas fa-arrow-left me-2"></i>
                Back to Products
              <% end %>
              
              <% if @product %>
                <%= link_to product_path(@product), class: "btn btn-outline-primary" do %>
                  <i class="fas fa-eye me-2"></i>
                  View Product
                <% end %>
              <% end %>
            </div>

            <div class="d-flex gap-2">
              <%= link_to request.referer || products_path, class: "btn btn-outline-secondary" do %>
                <i class="fas fa-times me-2"></i>
                Cancel
              <% end %>
              
              <% if @product %>
                <%= link_to product_path(@product), 
                    method: :delete, 
                    data: { 
                      turbo_method: :delete, 
                      turbo_confirm: "Type 'DELETE' to confirm deletion of #{@product.name}" 
                    }, 
                    class: "btn btn-danger" do %>
                  <i class="fas fa-trash me-2"></i>
                  Delete Product
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    <% elsif @product&.destroyed? || flash[:notice]&.include?('deleted') %>
      <!-- Success - Product Deleted -->
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        <strong>Success!</strong> Product has been deleted successfully.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>

      <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
          <h3 class="card-title mb-0">
            <i class="fas fa-check-circle me-2"></i>
            Product Successfully Deleted
          </h3>
        </div>
        <div class="card-body text-center py-5">
          <div class="mb-4">
            <i class="fas fa-trash-alt fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Product Removed</h4>
            <p class="text-muted">The product has been permanently deleted from your store.</p>
          </div>

          <div class="d-flex justify-content-center gap-3">
            <%= link_to products_path, class: "btn btn-primary" do %>
              <i class="fas fa-list me-2"></i>
              View All Products
            <% end %>
            
            <%= link_to new_product_path, class: "btn btn-outline-success" do %>
              <i class="fas fa-plus me-2"></i>
              Add New Product
            <% end %>
          </div>
        </div>
      </div>

    <% else %>
      <!-- Error - Failed to Delete -->
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Error!</strong> Failed to delete the product. Please try again.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>

      <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
          <h3 class="card-title mb-0">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Deletion Failed
          </h3>
        </div>
        <div class="card-body text-center py-5">
          <div class="mb-4">
            <i class="fas fa-exclamation-circle fa-4x text-danger mb-3"></i>
            <h4 class="text-danger">Unable to Delete Product</h4>
            <p class="text-muted">
              The product could not be deleted. This might be because:
            </p>
            <ul class="list-unstyled text-muted">
              <li>• The product is part of active orders</li>
              <li>• You don not have permission to delete this product</li>
              <li>• There was a server error</li>
            </ul>
          </div>

          <div class="d-flex justify-content-center gap-3">
            <%= link_to products_path, class: "btn btn-primary" do %>
              <i class="fas fa-arrow-left me-2"></i>
              Back to Products
            <% end %>
            
            <% if @product %>
              <%= link_to product_path(@product), class: "btn btn-outline-primary" do %>
                <i class="fas fa-eye me-2"></i>
                View Product
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Undo Functionality (if needed) -->
    <% if Rails.env.development? && @deleted_product_data %>
      <div class="card shadow-sm mt-4" style="border-left: 4px solid #ffc107;">
        <div class="card-body">
          <h6 class="text-warning">
            <i class="fas fa-undo me-2"></i>
            Developer Mode: Undo Deletion
          </h6>
          <p class="text-muted mb-3">
            In development mode, you can restore the deleted product.
          </p>
          <%= button_to "Undo Deletion", 
              products_path, 
              method: :post, 
              params: { restore_data: @deleted_product_data }, 
              class: "btn btn-warning btn-sm" do %>
            <i class="fas fa-undo me-2"></i>
            Restore Product
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .card {
    border: none;
    border-radius: 12px;
  }
  
  .card-header {
    border-radius: 12px 12px 0 0 !important;
    border-bottom: 1px solid #dee2e6;
  }
  
  .btn {
    border-radius: 8px;
    font-weight: 500;
  }
  
  .product-details {
    margin-top: 1rem;
  }
  
  .alert {
    border-radius: 10px;
  }
  
  /* Shake animation for dangerous actions */
  .btn-danger:hover {
    animation: shake 0.3s ease-in-out;
  }
  
  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-2px); }
    75% { transform: translateX(2px); }
  }
</style>

<script>
  // Auto-hide success alerts after 5 seconds
  document.addEventListener('DOMContentLoaded', function() {
    const alerts = document.querySelectorAll('.alert-success');
    alerts.forEach(alert => {
      setTimeout(() => {
        const bsAlert = new bootstrap.Alert(alert);
        bsAlert.close();
      }, 5000);
    });
    
    // Add confirmation for delete button
    const deleteBtn = document.querySelector('[data-turbo-confirm]');
    if (deleteBtn) {
      deleteBtn.addEventListener('click', function(e) {
        const productName = this.getAttribute('data-turbo-confirm').match(/'([^']+)'/)[1];
        const userInput = prompt(`To confirm deletion, please type: DELETE`);
        
        if (userInput !== 'DELETE') {
          e.preventDefault();
          alert('Deletion cancelled. You must type "DELETE" exactly to confirm.');
          return false;
        }
      });
    }
  });
</script>