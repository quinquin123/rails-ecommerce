<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="shadow-sm card border-danger">
        <div class="text-white card-header bg-danger">
          <h2 class="mb-0">
            <i class="fas fa-exclamation-triangle me-2"></i>
              Confirm Deletion
          </h2>
        </div>
        <div class="text-center card-body">
          <h4 class="mb-4">Are you sure you want to delete this product?</h4>
          <div class="mb-4 card">
            <div class="card-body">
              <% if @product.preview_image.attached? %>
                <%= image_tag @product.preview_image.variant(resize_to_limit: [300, 300]),
                                  class: "img-fluid rounded mb-3",
                                  style: "max-height: 150px" %>
              <% end %>
              <h5><%= @product.title %></h5>
              <p class="text-muted"><%= @product.category&.name || 'No category' %></p>
              <h5><%= number_to_currency(@product.price) %></h5>
            </div>
          </div>
          <div class="gap-3 d-flex justify-content-center">
            <%= button_to "Delete Permanently", product_path(@product), method: :delete, class: "btn btn-danger" %>
            <%= link_to "Cancel", product_path(@product), class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  .card {
    border-radius: 0.5rem;
  }
  .btn-danger {
    min-width: 150px;
  }
</style>
 