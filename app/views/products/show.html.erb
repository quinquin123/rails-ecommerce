<div class="product-detail">
  <div class="row">
    <!-- Product Image -->
    <div class="mb-4 col-lg-6">
      <div class="product-image-container">
        <% if @product.preview_image.attached? %>
          <%= image_tag @product.preview_image.variant(resize_to_limit: [800, 800]),
              class: "product-main-image" %>
        <% else %>
          <div class="placeholder-image">
            <i class="fas fa-image"></i>
            <span>No Image Available</span>
          </div>
        <% end %>
      </div>
      
      <!-- Downloadable asset section -->
      <% if @product.downloadable_asset.attached? %>
        <div class="download-section mt-4">
          <h4>Downloadable File</h4>
          <%= link_to @product.downloadable_asset.filename,
                    rails_blob_path(@product.downloadable_asset, disposition: 'attachment'),
                    class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>

    <!-- Product Info -->
    <div class="col-lg-6">
      <div class="product-info">
        <div class="product-header">
          <h1 class="product-title"><%= @product.title %></h1>
          <div class="product-price">$<%= @product.price %></div>
        </div>
        
        <div class="product-meta">
          <div class="meta-item">
            <i class="fas fa-tag"></i>
            <span><%= @product.category&.name || 'Uncategorized' %></span>
          </div>
          <div class="meta-item">
            <i class="fas fa-user"></i>
            <span><%= @product.seller&.name || 'Unknown Seller' %></span>
          </div>
          <div class="meta-item">
            <i class="fas fa-calendar"></i>
            <span>Added <%= @product.created_at.strftime("%B %d, %Y") %></span>
          </div>
        </div>
        
        <div class="product-description">
          <h3>Description</h3>
          <p><%= simple_format(@product.description) %></p>
        </div>
        
        <% if @product.tags.any? %>
          <div class="product-tags">
            <h4>Tags</h4>
            <div class="tags-container">
              <% @product.tags.each do |tag| %>
                <span class="tag"><%= tag %></span>
              <% end %>
            </div>
          </div>
        <% end %>
        
        <div class="product-actions">
          <% if user_signed_in? && current_user.buyer? %>
            <%= button_to add_item_cart_path, method: :post, params: { product_id: @product.id }, class: 'btn btn-secondary btn-lg add-to-cart', remote: true do %>
              <i class="fas fa-cart-plus me-1"></i> Add to Cart
            <% end %>
            
            <% if @product.downloadable_asset.attached? %>
              <%= link_to rails_blob_path(@product.downloadable_asset, disposition: 'preview'),
                                      target: '_blank',
                                      class: 'btn btn-secondary btn-lg' do %>
                <i class="fas fa-download me-2"></i>Preview
              <% end %>
            <% end %>
          <% end %>
          
          <% if user_signed_in? && (current_user == @product.seller || current_user.admin?) %>
            <div class="admin-actions">
              <%= link_to edit_product_path(@product), class: 'btn btn-warning btn-lg' do %>
                <i class="fas fa-edit me-2"></i>Edit Product
              <% end %>
              
              <%= link_to product_path(@product), 
                  data: { 
                    turbo_method: :delete,
                    turbo_confirm: 'Are you sure you want to delete this product?' 
                  }, 
                  class: 'btn btn-danger btn-lg' do %>
                <i class="fas fa-trash me-2"></i>Delete Product
              <% end %>
            </div>
          <% end %>
          
          <% unless user_signed_in? %>
            <div class="guest-actions">
              <%= link_to new_user_session_path, class: 'btn btn-primary btn-lg' do %>
                <i class="fas fa-sign-in-alt me-2"></i>Sign In to Purchase
              <% end %>
              
              <%= link_to new_user_registration_path, class: 'btn btn-secondary btn-lg' do %>
                <i class="fas fa-user-plus me-2"></i>Sign Up
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Back to Products -->
  <div class="back-navigation">
    <%= link_to products_path, class: 'btn btn-outline-primary' do %>
      <i class="fas fa-arrow-left me-2"></i>Back to Products
    <% end %>
  </div>
</div>

