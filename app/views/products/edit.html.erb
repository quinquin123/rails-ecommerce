<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0">
            <i class="fas fa-edit me-2"></i>
            Edit Product
          </h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @product, local: true, html: { multipart: true }) do |f| %>
            <% if @product.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h5>
                <ul>
                  <% @product.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="mb-3">
              <%= f.label :title, "Product Name", class: "form-label" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :price, class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">$</span>
                <%= f.number_field :price, step: 0.01, class: "form-control" %>
              </div>
            </div>
            <div class="mb-3">
              <%= f.label :description, class: "form-label" %>
              <%= f.text_area :description, rows: 4, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :category_id, "Category", class: "form-label" %>
              <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a category" }, class: "form-select" %>
            </div>
            <div class="mb-3">
              <%= f.label :preview_url, "Product Image", class: "form-label" %>
              <% if @product.preview_url.present? %>
                <div class="mb-2">
                  <%= image_tag @product.preview_url, class: "img-thumbnail", style: "max-height: 200px" %>
                </div>
              <% end %>
              <%= f.file_field :preview_url, accept: "image/*" %>
            </div>
            <div class="d-flex justify-content-between">
              <%= link_to "Cancel", product_path(@product), class: "btn btn-outline-secondary" %>
              <%= f.submit "Update Product", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
 .card {
   border-radius: 0.5rem;
 }
 .card-header {
   border-bottom: none;
 }
</style>