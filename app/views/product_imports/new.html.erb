<h2>Import Products</h2>

<%= form_with model: @product_import, url: product_imports_path, local: true, html: { multipart: true } do |form| %>
  <div class="mb-3">
    <%= form.label :file_name, "Choose CSV file" %>
    <%= form.file_field :file_name, class: "form-control" %>
  </div>
  <%= form.submit "Import", class: "btn btn-primary" %>
<% end %>
