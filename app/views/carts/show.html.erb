<h1>Your Cart</h1>
<% if @cart.cart_items.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each do |item| %>
        <tr>
          <td><%= item.product.title %></td>
          <td><%= number_to_currency(item.product.price) %></td>
          <td>
            <%= link_to 'Remove', remove_item_cart_path(item), method: :delete, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p><strong>Total:</strong> <%= number_to_currency(@cart.products.sum(:price)) %></p>
  <%= link_to 'Checkout', new_order_path, class: 'btn btn-success' %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>