<div class="seller-report-container">
  <div class="report-header">
    <h1>Seller Dashboard</h1>
    <p class="report-date">Report generated on <%= Date.current.strftime('%B %d, %Y') %></p>
  </div>

  <!-- Key Metrics Summary -->
  <div class="metrics-grid">
    <div class="metric-card primary">
      <h3>Total Earnings</h3>
      <div class="metric-value"><%= number_to_currency(@total_earnings) %></div>
    </div>
    
    <div class="metric-card">
      <h3>Total Sales</h3>
      <div class="metric-value"><%= @sales_count %></div>
    </div>
    
    <div class="metric-card">
      <h3>Average Order Value</h3>
      <div class="metric-value"><%= number_to_currency(@average_order_value) %></div>
    </div>
    
    <div class="metric-card">
      <h3>Pending Orders</h3>
      <div class="metric-value"><%= @pending_orders %></div>
    </div>
  </div>

  <!-- Performance Metrics -->
  <div class="performance-section">
    <h2>Performance Overview</h2>
    <div class="performance-grid">
      <div class="performance-item">
        <span class="label">Average Product Rating:</span>
        <span class="value"><%= number_with_precision(@average_rating, precision: 1) %> ‚≠ê</span>
      </div>
      <div class="performance-item">
        <span class="label">Return Rate:</span>
        <span class="value"><%= @return_rate %>%</span>
      </div>
      <div class="performance-item">
        <span class="label">Repeat Customers:</span>
        <span class="value"><%= @repeat_customers_count %></span>
      </div>
    </div>
  </div>

  <!-- Charts Section -->
  <div class="charts-section">
    <div class="chart-container">
      <h3>Monthly Earnings Trend</h3>
      <div class="chart-placeholder">
        <!-- You can integrate Chart.js or similar here -->
        <% @monthly_earnings.each do |month, earnings| %>
          <div class="chart-bar">
            <span class="month"><%= month %></span>
            <span class="earnings"><%= number_to_currency(earnings) %></span>
          </div>
        <% end %>
      </div>
    </div>

    <div class="chart-container">
      <h3>Weekly Sales Volume</h3>
      <div class="chart-placeholder">
        <% @weekly_sales.each do |week, count| %>
          <div class="chart-bar">
            <span class="week"><%= week %></span>
            <span class="count"><%= count %> sales</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Product Analytics -->
  <div class="products-section">
    <div class="product-analytics-grid">
      <!-- Top Products by Revenue -->
      <div class="product-list-container">
        <h3>üèÜ Top 5 Products by Revenue</h3>
        <% if @top_products_by_revenue.any? %>
          <ul class="product-list">
            <% @top_products_by_revenue.each_with_index do |(product, revenue), index| %>
              <li class="product-item">
                <span class="rank">#<%= index + 1 %></span>
                <%= link_to product.title, product_path(product), class: 'product-link' %>
                <span class="metric"><%= number_to_currency(revenue) %></span>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="no-data">No sales data available yet.</p>
        <% end %>
      </div>

      <!-- Top Products by Sales Volume -->
      <div class="product-list-container">
        <h3>üì¶ Top 5 Products by Sales Volume</h3>
        <% if @top_products_by_sales.any? %>
          <ul class="product-list">
            <% @top_products_by_sales.each_with_index do |(product, quantity), index| %>
              <li class="product-item">
                <span class="rank">#<%= index + 1 %></span>
                <%= link_to product.title, product_path(product), class: 'product-link' %>
                <span class="metric"><%= quantity %> sold</span>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="no-data">No sales data available yet.</p>
        <% end %>
      </div>

      <!-- Top Products by Reviews -->
      <div class="product-list-container">
        <h3>‚≠ê Top 5 Products by Reviews</h3>
        <% if @top_products_by_reviews.any? %>
          <ul class="product-list">
            <% @top_products_by_reviews.each_with_index do |product, index| %>
              <li class="product-item">
                <span class="rank">#<%= index + 1 %></span>
                <%= link_to product.title, product_path(product), class: 'product-link' %>
                <span class="metric"><%= product.reviews_count %> reviews</span>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="no-data">No products with reviews yet.</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Inventory Management -->
  <div class="inventory-section">
    <h2>Product Overview</h2>
    <div class="inventory-grid">
      <div class="inventory-card">
        <h4>Total Products</h4>
        <div class="inventory-value"><%= @total_products %></div>
      </div>
      <div class="inventory-card">
        <h4>Active Products</h4>
        <div class="inventory-value"><%= @active_products %></div>
      </div>
      <div class="inventory-card">
        <h4>Moderated Products</h4>
        <div class="inventory-value warning"><%= @moderated_products %></div>
      </div>
      <div class="inventory-card">
        <h4>Deleted Products</h4>
        <div class="inventory-value"><%= @deleted_products %></div>
      </div>
    </div>
  </div>
</div>

