<div class="buyer-report-container">
  <div class="report-header">
    <h1>Buyer Dashboard</h1>
    <p class="report-date">Your shopping insights ‚Ä¢ <%= Date.current.strftime('%B %d, %Y') %></p>
  </div>

  <!-- Key Metrics Summary -->
  <div class="metrics-grid">
    <div class="metric-card primary">
      <div class="metric-icon">üí∞</div>
      <h3>Total Spent</h3>
      <div class="metric-value"><%= number_to_currency(@total_spent) %></div>
      <div class="metric-subtitle">Lifetime purchases</div>
    </div>
    
    <div class="metric-card">
      <div class="metric-icon">üìä</div>
      <h3>Average Order</h3>
      <div class="metric-value"><%= number_to_currency(@average_spent) %></div>
      <div class="metric-subtitle">Per purchase</div>
    </div>
    
    <div class="metric-card">
      <div class="metric-icon">üõí</div>
      <h3>Total Orders</h3>
      <div class="metric-value"><%= @orders_count %></div>
      <div class="metric-subtitle">Completed purchases</div>
    </div>
  </div>

  <!-- Purchase History Section -->
  <div class="section-header">
    <h2><i class="fas fa-history"></i> Purchase History</h2>
    <div class="filter-buttons">
      <button class="filter-btn active" data-filter="all">All</button>
      <button class="filter-btn" data-filter="paid">Complete</button>
      <button class="filter-btn" data-filter="pending">Processing</button>
      <button class="filter-btn" data-filter="failed">Failure</button>
    </div>
  </div>

  <div class="orders-container">
    <% @orders.each do |order| %>
      <div class="order-card" data-status="<%= order.status %>">
        <div class="order-header">
          <div class="order-info">
            <h3>Order #<%= order.id.first(8) %></h3>
            <div class="order-meta">
              <span class="order-date">
                <i class="far fa-calendar"></i> 
                <%= order.created_at.strftime('%d %B, %Y') %>
              </span>
              <span class="order-status <%= order.status %>">
                <i class="fas <%= order.status == 'paid' ? 'fa-check-circle' : order.status == 'pending' ? 'fa-clock' : 'fa-times-circle' %>"></i>
                <%= order.status.humanize %>
              </span>
            </div>
          </div>
          <div class="order-total">
            <div class="total-amount"><%= number_to_currency(order.total_amount) %></div>
            <div class="items-count"><%= pluralize(order.order_items.count, 'item') %></div>
          </div>
        </div>

        <div class="order-items">
          <% order.order_items.includes(:product).each do |order_item| %>
            <div class="order-item">
              <div class="item-image">
                <% if order_item.product.preview_image.attached? %>
                  <%= image_tag order_item.product.preview_image.variant(resize_to_limit: [60, 60]), class: 'img-thumbnail', style: 'width: 60px; height: 60px; object-fit: cover;' %>                <% else %>
                  <div class="placeholder-image">
                    <%= order_item.product.title.first(1).upcase %>
                  </div>
                <% end %>
              </div>
              
              <div class="item-details">
                <h4><%= order_item.product.title %></h4>
                <p class="item-description"><%= truncate(order_item.product.description, length: 100) %></p>
                
                <div class="item-meta">
                  <span class="item-category">
                    <i class="fas fa-tag"></i> 
                    <%= order_item.product.category.name if order_item.product.category %>
                  </span>
                  
                  <% if order_item.product.average_rating && order_item.product.average_rating > 0 %>
                    <span class="item-rating">
                      <i class="fas fa-star"></i>
                      <%= order_item.product.average_rating %> 
                      (<%= order_item.product.reviews_count %>)
                    </span>
                  <% end %>
                </div>

                <% if order_item.product.tags.any? %>
                  <div class="item-tags">
                    <% order_item.product.tags.first(3).each do |tag| %>
                      <span class="tag"><%= tag %></span>
                    <% end %>
                  </div>
                <% end %>
              </div>

              <div class="item-actions">
                <div class="item-price">
                  <%= number_to_currency(order_item.price_at_purchase) %>
                </div>
                
                <div class="action-buttons">
                  <% if order.status == 'completed' && order_item.download_url.present? %>
                    <a href="<%= order_item.download_url %>" class="action-btn primary" target="_blank">
                      <i class="fas fa-download"></i> T·∫£i xu·ªëng
                    </a>
                  <% end %>
                  
                  <% if order.status == 'completed' %>
                    <%= link_to new_product_review_path(order_item.product), class: "action-btn secondary" do %>
                      <i class="fas fa-star"></i> ƒê√°nh gi√°
                    <% end %>
                  <% end %>
                  
                  <%= link_to product_path(order_item.product), class: "action-btn secondary" do %>
                    <i class="fas fa-eye"></i> Xem
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @orders.empty? %>
    <div class="empty-state">
      <div class="empty-icon">üõí</div>
      <h3>Ch∆∞a c√≥ ƒë∆°n h√†ng n√†o</h3>
      <p>B·∫°n ch∆∞a mua s·∫£n ph·∫©m n√†o. H√£y kh√°m ph√° marketplace ƒë·ªÉ t√¨m nh·ªØng s·∫£n ph·∫©m tuy·ªát v·ªùi!</p>
      <%= link_to "Kh√°m ph√° s·∫£n ph·∫©m", products_path, class: "explore-btn" %>
    </div>
  <% end %>

  <!-- Pagination if using Kaminari or similar -->
  <% if @orders.respond_to?(:current_page) %>
    <div class="pagination-container">
      <%= paginate @orders, theme: 'custom' %>
    </div>
  <% end %>
</div>

