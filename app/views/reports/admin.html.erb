<div class="admin-report-container">
  <div class="report-header">
    <h1>Admin Dashboard</h1>
    <p class="report-date">Platform overview ‚Ä¢ <%= Date.current.strftime('%B %d, %Y') %></p>
  </div>

  <!-- Revenue Section -->
  <div class="revenue-section">
    <div class="revenue-card">
      <div class="revenue-content">
        <div class="revenue-icon">üí∞</div>
        <div class="revenue-info">
          <h2>Total Revenue</h2>
          <div class="revenue-value"><%= number_to_currency(@total_revenue) %></div>
          <p class="revenue-subtitle">Platform lifetime earnings</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Key Metrics Grid -->
  <div class="metrics-grid">
    <div class="metric-card users">
      <div class="metric-icon">üë•</div>
      <h3>Active Users</h3>
      <div class="metric-value"><%= @active_users %></div>
      <div class="metric-trend positive">+12% this month</div>
    </div>
    
    <div class="metric-card pending">
      <div class="metric-icon">‚è≥</div>
      <h3>Pending Sellers</h3>
      <div class="metric-value"><%= @pending_sellers %></div>
      <div class="metric-action">
        <a href="#" class="action-link">Review Applications</a>
      </div>
    </div>
    
    <div class="metric-card blocked">
      <div class="metric-icon">üö´</div>
      <h3>Blocked Users</h3>
      <div class="metric-value"><%= @blocked_user %></div>
      <div class="metric-trend neutral">Monitoring</div>
    </div>
  </div>

  <!-- Product Management Section -->
  <div class="products-section">
    <h2>Product Management</h2>
    <div class="products-grid">
      <div class="product-status-card active">
        <div class="status-header">
          <div class="status-icon">‚úÖ</div>
          <h3>Active Products</h3>
        </div>
        <div class="status-number"><%= @active_products %></div>
        <div class="status-bar">
          <div class="status-fill" style="width: <%= @active_products > 0 ? (@active_products.to_f / (@active_products + @moderated_products + @deleted_products) * 100).round : 0 %>%"></div>
        </div>
        <p class="status-description">Live and selling</p>
      </div>

      <div class="product-status-card moderated">
        <div class="status-header">
          <div class="status-icon">‚ö†Ô∏è</div>
          <h3>Under Review</h3>
        </div>
        <div class="status-number"><%= @moderated_products %></div>
        <div class="status-bar moderated-bar">
          <div class="status-fill" style="width: <%= @moderated_products > 0 ? (@moderated_products.to_f / (@active_products + @moderated_products + @deleted_products) * 100).round : 0 %>%"></div>
        </div>
        <p class="status-description">Awaiting approval</p>
        <% if @moderated_products > 0 %>
          <a href="#" class="status-action">Review Now</a>
        <% end %>
      </div>

      <div class="product-status-card deleted">
        <div class="status-header">
          <div class="status-icon">üóëÔ∏è</div>
          <h3>Removed</h3>
        </div>
        <div class="status-number"><%= @deleted_products %></div>
        <div class="status-bar deleted-bar">
          <div class="status-fill" style="width: <%= @deleted_products > 0 ? (@deleted_products.to_f / (@active_products + @moderated_products + @deleted_products) * 100).round : 0 %>%"></div>
        </div>
        <p class="status-description">Deleted products</p>
      </div>
    </div>
  </div>

  <!-- Platform Health -->
  <div class="health-section">
    <h2>Platform Health</h2>
    <div class="health-grid">
      <div class="health-card">
        <h3>üéØ Content Quality</h3>
        <div class="health-meter">
          <div class="meter-fill good" style="width: <%= @active_products > 0 ? ((@active_products.to_f / (@active_products + @moderated_products)) * 100).round : 0 %>%"></div>
        </div>
        <p>
          <% approval_rate = @active_products > 0 ? ((@active_products.to_f / (@active_products + @moderated_products)) * 100).round : 0 %>
          <%= approval_rate %>% approval rate
        </p>
      </div>

      <div class="health-card">
        <h3>üë§ User Management</h3>
        <div class="health-meter">
          <div class="meter-fill excellent" style="width: <%= @active_users > 0 ? ((@active_users.to_f / (@active_users + @blocked_user)) * 100).round : 0 %>%"></div>
        </div>
        <p>
          <% user_health = @active_users > 0 ? ((@active_users.to_f / (@active_users + @blocked_user)) * 100).round : 0 %>
          <%= user_health %>% healthy users
        </p>
      </div>

      <div class="health-card">
        <h3>üöÄ Growth</h3>
        <div class="health-stats">
          <div class="stat">
            <span class="stat-number"><%= @pending_sellers %></span>
            <span class="stat-label">New applications</span>
          </div>
        </div>
        <p>Platform expansion</p>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="actions-section">
    <h2>Quick Actions</h2>
    <div class="actions-grid">
      <% if @pending_sellers > 0 %>
        <div class="action-card urgent">
          <div class="action-icon">üîç</div>
          <h3>Review Sellers</h3>
          <p><%= @pending_sellers %> applications waiting</p>
          <a href="#" class="action-button">Review Now</a>
        </div>
      <% end %>

      <% if @moderated_products > 0 %>
        <div class="action-card important">
          <div class="action-icon">üìù</div>
          <h3>Moderate Content</h3>
          <p><%= @moderated_products %> products to review</p>
          <a href="#" class="action-button">Moderate</a>
        </div>
      <% end %>

      <div class="action-card">
        <div class="action-icon">üìä</div>
        <h3>Analytics</h3>
        <p>View detailed platform analytics</p>
        <a href="#" class="action-button">View Reports</a>
      </div>

      <div class="action-card">
        <div class="action-icon">‚öôÔ∏è</div>
        <h3>Settings</h3>
        <p>Manage platform configuration</p>
        <a href="#" class="action-button">Configure</a>
      </div>
    </div>
  </div>
</div>

